{
	"manifest_version": 2,
	"name": "Coveo Checkers",
	"short_name": "coveo-checker",
	"version": "0.9.4",
	"description": "A Chrome extension to analyze your Coveo Org and Implementation.",

	"icons": {
		"16": "images/16.png",
		"48": "images/48.png",
		"128": "images/128.png"
	},
	"background": {
		"scripts": ["js/background.js"]
	},
	"browser_action": {
		"default_icon": "/images/icon.png",
		"default_popup": "/popup.html"
	},

	"content_scripts": [{
		"run_at": "document_end",
		"matches": [
			"<all_urls>"
		],
		"js": [
			"/js/content-loader.js",
			"/js/content.js"
		],
		"css": [
			"/css/inject.css"
		],
		"all_frames": false
	}],
	"permissions": [
		"activeTab",
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"*://*/"
	]

}
